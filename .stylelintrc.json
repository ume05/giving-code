{
  "extends": [
    "stylelint-config-standard",
    "stylelint-config-rational-order",
    "stylelint-config-prettier"
  ],
  "ignoreFiles": [
    ".next/**/*",
    "public/**/*",
    "node_modules/**/*"
  ],
  "plugins": [
    "stylelint-order"
  ],
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": ["screen"]
      }
    ]
  }
}
